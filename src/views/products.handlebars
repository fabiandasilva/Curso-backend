<h1 class="text-3xl font-bold mb-4">Lista de productos</h1>

<div class="space-y-4">
    {{#each products}}
    <div class="border rounded-lg p-4">
        <h2 class="text-xl font-semibold">{{title}}</h2>
        <p class="text-gray-600">{{description}}</p>
        <p class="text-lg font-bold mt-2">${{price}}</p>
        <form method="post" action="api/carts/65de3f41370fa933e10ec8c4/products/{{_id}}">
            <button id="btnAgregarAlCarrito" type="submit"
                class="bg-blue-500 text-white px-4 py-2 rounded-md mt-4 hover:bg-blue-600 focus:outline-none focus:bg-blue-600">
                Agregar al carrito
            </button>
        </form>
    </div>
    {{/each}}
</div>