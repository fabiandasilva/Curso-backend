<div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold mb-8">Registro</h1>

    <form action="/api/session/register" method="post">
        <div class="mb-4">
            <label for="first_name" class="block mb-2">Nombre del usuario</label>
            <input type="text" name="first_name" id="first_name" placeholder="Introduzca su nombre" required
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
        </div>

        <div class="mb-4">
            <label for="last_name" class="block mb-2">Apellido</label>
            <input type="text" name="last_name" id="last_name" placeholder="Introduzca su apellido" required
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
        </div>

        <div class="mb-4">
            <label for="email" class="block mb-2">Email</label>
            <input type="email" name="email" id="email" placeholder="Introduzca su correo electrónico" required
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
        </div>

        <div class="mb-4">
            <label for="age" class="block mb-2">Edad</label>
            <input type="number" name="age" id="age" placeholder="Introduzca su edad" min="0" required
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
        </div>

        <div class="mb-4">
            <label for="password" class="block mb-2">Contraseña</label>
            <input type="password" name="password" id="password" placeholder="Introduzca su contraseña" required
                class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
        </div>

        <div class="flex gap-2">

            <button type="submit"
                class="w-1/2 bg-blue-500 text-sm text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">Registrarse</button>
            <a href="/login" <button
                class="w-3/4 bg-blue-500 text-sm text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">Loguearse</button>
            </a>
        </div>
    </form>
</div>