<div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold mb-8">Inicio de Sesión</h1>

    <div class="mb-4">
        <form action="/api/session/login" method="post">
            <div class="mb-4">
                <label for="email" class="block mb-2">Correo</label>
                <input type="email" name="email" id="email" placeholder="Introduzca su correo electrónico"
                    class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
            </div>

            <div class="mb-4">
                <label for="password" class="block mb-2">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Introduzca su contraseña" required
                    class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring focus:border-blue-300" />
            </div>
            <div class="flex gap-2">
                <button type="submit"
                    class="w-3/4 bg-blue-500 text-sm text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">Iniciar
                    Sesión</button>
                <a href="/register" <button
                    class="w-1/2 bg-blue-500 text-sm text-white py-2 px-4 rounded-md hover:bg-blue-600 transition duration-300">Registro</button>
                </a>
            </div>
        </form>
    </div>
</div>